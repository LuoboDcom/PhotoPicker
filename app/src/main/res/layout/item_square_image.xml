<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#303d42">

    <com.ys.yoosir.photopicker.widget.YSImageView
        android:id="@+id/photo_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:ys_iv_isSquare="true"
        tools:src="@mipmap/ic_camera_active" />

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/photo_iv"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="选择"
        android:textColor="#adb2bb"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/flag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:src="@mipmap/ic_cb_normal" />

</RelativeLayout>